[VERTEX]
#version 460 core

layout (location = 0) in vec3 aPos;

out vec3 TexCoords;

uniform mat4 proj;
uniform mat4 view;

void main() {
  TexCoords = aPos;
  gl_Position = proj * view * vec4(aPos, 1.0);
}
[END VERTEX]

[FRAGMENT]
#version 460 core

out vec4 FragColor;

in vec3 TexCoords;

uniform samplerCube skybox;

void main() {
  FragColor = texture(skybox, TexCoords);
}
[END FRAGMENT]